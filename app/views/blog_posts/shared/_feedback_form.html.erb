<%= form_with(model: [@blog_post, Feedback.new], url: create_feedback_blog_post_path(@blog_post), local: true) do |form| %>
    <% if feedback.errors.any? %>
        <div class="bg-red-100 text-red-700 p-4 rounded">
        <h4 class="font-bold mb-2"><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h4>
        <ul class="list-disc list-inside">
            <% feedback.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div>
        <%= form.label :commenter_name, class: "block font-medium" %>
        <%= form.text_field :commenter_name, required: true, class: "w-full border border-gray-300 rounded p-2" %>
    </div>

    <div>
        <%= form.label :commenter_email, class: "block font-medium" %>
        <%= form.email_field :commenter_email, required: true, class: "w-full border border-gray-300 rounded p-2" %>
    </div>

    <div>
        <%= form.label :content, "Your Feedback", class: "block font-medium" %>
        <%= form.text_area :content, rows: 4, required: true, class: "w-full border border-gray-300 rounded p-2" %>
    </div>

    <div>
        <%= form.submit "Submit Feedback", class: "px-4 py-2 bg-violet-500 text-white rounded hover:bg-violet-600" %>
    </div>
<% end %>
