<%= form_with(model: blog_post, local: true, class: "space-y-6 max-w-xl mx-auto") do |form| %>
  <% if blog_post.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h4 class="font-semibold"><%= pluralize(blog_post.errors.count, "error") %> prohibited this blog post from being saved:</h4>
      <ul class="list-disc list-inside mt-2">
        <% blog_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, required: true, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-[#9748FF] focus:border-[#9748FF]" %>
  </div>

  <div>
    <%= form.label :author_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :author_name, required: true, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-[#9748FF] focus:border-[#9748FF]" %>
  </div>

  <div>
    <%= form.label :author_email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.email_field :author_email, required: true, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-[#9748FF] focus:border-[#9748FF]" %>
  </div>

  <div>
    <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.rich_text_area  :content, rows: 10, required: true, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-[#9748FF] focus:border-[#9748FF]" %>
  </div>

  <div>
    <%= form.submit "Save", class: "px-6 py-2 rounded-3xl bg-[#9748FF] text-white font-semibold hover:bg-[#7a3fd6] transition" %>
  </div>
<% end %>
