<div>
  <h1 class="text-3xl font-bold mb-6">Blog Posts</h1>
  <%= link_to new_blog_post_path, class: 'inline-flex items-center justify-center w-30 h-8 rounded-2xl border-2 border-[#9748FF] bg-white text-[#333] hover:bg-[#9748FF] hover:text-white transition' do %>
    <span class="font-medium">New Blog</span>
  <% end %>
</div>

  <% @blog_posts.each do |post| %>
      <article class="w-100 shadow-md p-5 rounded-md hover:-translate-y-1 hover:shadow-lg transition duration-300">
        <h3 class="text-xl font-semibold mb-1"><%= link_to post.title, post %></h3>
        <p class="text-gray-400 mb-2"><strong>By:</strong> <%= post.author_name %></p>
        <p class="text-white mb-4"><%= post.content %></p>
        <p class="text-gray-500 text-sm mb-1">Posted on <%= post.created_at.strftime("%B %d, %Y") %></p>
        <p class="text-gray-500 text-sm"><%= pluralize(post.feedbacks.count, 'feedback') %></p>
      </article>
  <% end %>

<% if @blog_posts.empty? %>
  <p class="mt-6 text-gray-400">No blog posts yet. <%= link_to 'Create the first one!', new_blog_post_path, class: 'text-blue-600 underline' %></p>
<% end %>
